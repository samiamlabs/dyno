<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="drive_wheel.gazebo.xacro"/>
  <xacro:include filename="drive_wheel.transmission.xacro"/>

  <xacro:macro name="drive_wheel" params="name radius width separation reflect parent">
    <link name="${name}_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="${radius}" length="${width}"/>
        </geometry>
        <material name="black"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="${radius}" length="${width}"/>
        </geometry>
        <material name="orange"/>
      </collision>

      <inertial>
        <origin xyz="0 0 ${-0.00207 * reflect}" rpy="0 0 0"/>
        <!-- TODO: update according to real wheel properties -->
        <mass value="1.0"/>
        <inertia ixx="0.00499743171" ixy="${ 0.00000004464 * reflect}" ixz="-0.00000002245"
                 iyy="0.00499741733" iyz="${-0.00000000164 * reflect}"
                 izz="0.00839239692"/>
      </inertial>

    </link>

    <joint name="${name}_joint" type="continuous">
      <origin xyz="0 ${-separation / 2 * reflect} 0" rpy="${-pi/2} 0 0"/>
      <parent link="${parent}"/>
      <child link="${name}_link"/>
      <axis xyz="0 0 1"/>
      <limit effort="10000" velocity="10000"/>
    </joint>

    <!-- Transmission -->

    <xacro:if value="$(arg use_ros_control_for_base)">
      <wheel_transmission name="${name}"/>
    </xacro:if>

    <!-- Gazebo extensions -->
    <drive_wheel_gazebo name="${name}"/>

  </xacro:macro>
</robot>
